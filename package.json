{
  "name": "project-sentinel",
  "version": "1.0.0",
  "description": "데이터 기반 투자 대시보드 - 감정이 아닌 데이터에 기반한 합리적인 투자 결정을 도와주는 플랫폼",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && .\\gradlew.bat bootRun --args=\"--spring.profiles.active=dev\"",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && .\\gradlew.bat build",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && .\\gradlew.bat bootRun --args=\"--spring.profiles.active=prod\"",
    "start:frontend": "cd frontend && npm run start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && .\\gradlew.bat test",
    "test:frontend": "cd frontend && npm run test",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd frontend && npm run lint",
    "type-check": "npm run type-check:frontend",
    "type-check:frontend": "cd frontend && npm run type-check",
    "docker:build": "docker-compose -f docker-compose.yml build",
    "docker:up": "docker-compose -f docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker-compose.yml down",
    "docker:logs": "docker-compose -f docker-compose.yml logs -f",
    "setup": "npm install && cd frontend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/project-sentinel.git"
  },
  "keywords": [
    "investment",
    "dashboard",
    "data-driven",
    "portfolio-management",
    "spring-boot",
    "nextjs",
    "monorepo"
  ],
  "author": "Project Sentinel Team",
  "license": "MIT"
}